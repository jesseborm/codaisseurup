<!-- Registration Form -->
<% if current_user != @event.user %>
<div class="panel panel-primary">
  <div class="panel-heading">Register for this event</div>

  <div class="panel-body">
    <%= render 'registrations/form' %>
  </div>
</div>
<% end %>

<div class="panel panel-primary">
  <div class="panel-heading"><%= @event.name %></div>

  <div class="panel-body">


    <p>Host: <%= @event.user.email %></p>



    <!-- About -->
    <h4>About</h4>
    <p><%= @event.description %></p>

    <!-- Main Info -->
    <h4>Extra Info</h4>
    <p>Location: <%= @event.location %></p>
    <p><%= @event.capacity %> <%= @event.capacity > 1 ? "Guests" : "Guest" %></p>
    <p>Price: <%= @event.price %>
    <p>Start at: <%= @event.starts_at %>
    <p>Ends at: <%= @event.ends_at %>


    <!-- Amenities -->
    <h4>Amenities</h4>
    <ul class="amenities">
      <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Food" %></li>
      <li><%= !@event.includes_drinks ? ("<del>Drinks</del>").html_safe : "Drinks" %></li>
    </ul>

    <!-- Photos -->
    <h4>Photos</h4>
      <% @event.photos.each do |photo| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= image_tag photo.image.thumbnail %>
        </div>
      </div>
      <% end %>

    <h4>Categories</h4>
      <% @categories.each do |category| %>
        <span class="label label-success"><%= category.name %></span>
      <% end %>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
